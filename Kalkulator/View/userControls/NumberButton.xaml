<UserControl
    x:Class="Kalkulator.View.userControls.NumberButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Kalkulator.View.userControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Button
        Grid.Row="3"
        Grid.Column="0"
        Margin="5"
        Background="{Binding BackgroundColor}"
        BorderBrush="Black"
        BorderThickness="2"
        Click="Button_Click"
        Content="{Binding NumberText}"
        FontSize="70">
        <Button.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5" />
            </Style>
        </Button.Resources>
    </Button>
</UserControl>
