<Window
    x:Class="WPF_Tutorial_14.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_Tutorial_14"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Button
                x:Name="btnNormal"
                Width="100"
                Height="40"
                Margin="5"
                Click="btnNormal_Click"
                Content="Normal" />
            <Button
                x:Name="btnModal"
                Width="100"
                Height="40"
                Margin="5"
                Click="btnModal_Click"
                Content="Modal" />
            <TextBox
                x:Name="txtInput"
                Width="200"
                Height="40"
                FontSize="20" />
        </StackPanel>

    </Grid>
</Window>
